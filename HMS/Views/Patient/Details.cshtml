@using HMS.Enums
@model HMS.Models.Patient

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="intro" style="padding:200px">
<div>
    <h4>Patient Details</h4>
    <hr />
        <div class="table-responsive">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Age)</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.Age)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Gender)</th>
                        <td class="col-sm-10">@Enums.Gender.GetName(typeof(Enums.Gender), Model.Gender)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.ContactNumber)</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.ContactNumber)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.AdmissionDate)</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.AdmissionDate)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.DischargeDate)</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.DischargeDate)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.IsActive)</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.IsActive)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Address)</th>
                        <td class="col-sm-10">
                            @if (Model.Address?.Country == null)
                            {
                                @Html.Raw("N/A")
                            }
                            else
                            {
                                @Html.DisplayFor(model => model.Address.Country)
                            }
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">@Html.DisplayNameFor(model => model.Doctor)</th>
                        <td class="col-sm-10">
                            @if (Model.Doctor?.Name == null)
                            {
                                @Html.Raw("N/A")
                            }
                            else
                            {
                                @Html.DisplayFor(model => model.Doctor.Name)
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</div>