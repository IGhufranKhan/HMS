@using HMS.Enums
@model HMS.Models.Doctor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="intro" style="padding: 200px">


<div>
        <h4>@Model.Name Details</h4>
    <hr />
        <table class="table table-bordered table-striped table-responsive">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayFor(model => model.Name)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Specialization)</td>
                    <td>
                        @Enums.Gender.GetName(typeof(Enums.Specialization), Model.Specialization)

                    </td>
                    
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Experience)</td>
                    <td>@Html.DisplayFor(model => model.Experience)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.ContactNumber)</td>
                    <td>@Html.DisplayFor(model => model.ContactNumber)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Email)</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Department)</td>
                    <td>@Html.DisplayFor(model => model.Department.Name)</td>
                </tr>
            </tbody>
        </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</div>